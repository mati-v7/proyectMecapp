<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>imageRegistPath</param-name>
        <param-value>img/registro/</param-value>
    </context-param>
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>controller.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <!--Vistas-->
        <url-pattern>/ControllerServlet</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/customer_record</url-pattern>
        <url-pattern>/car_record</url-pattern>
        <url-pattern>/find_car</url-pattern>
        <url-pattern>/visit_registration</url-pattern>
        <url-pattern>/confirmation</url-pattern>
        <!--Acciones -->
        <url-pattern>/iniciarSesion</url-pattern>
        <url-pattern>/registrarUsuario</url-pattern>
        <url-pattern>/registrarVehiculo</url-pattern>
        <url-pattern>/encontrarVehiculo</url-pattern>
        <url-pattern>/confirmarCita</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <description>header and footer settings</description>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/WEB-INF/view/*</url-pattern>
            <include-prelude>/WEB-INF/jspfy/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspfy/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
